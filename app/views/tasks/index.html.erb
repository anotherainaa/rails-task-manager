<h1>Tasks Manager</h1>

<p><%= link_to "Create a new task", new_task_path %></p>


<ul><% @tasks.each do |task| %>
  <li><%= link_to task.name, task_path(task)%>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %></ul>

